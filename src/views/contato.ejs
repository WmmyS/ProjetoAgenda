<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

            <%- include('includes/messages')  %> 

            <% if(contato._id) { %> 
            <form class= "mt-5 form-contato" action="/contato/edit/<%= contato._id %> " method="POST">
            <% } else{ %> 
            <form class= "mt-5 form-contato" action="/contato/register" method="POST">
            <% } %> 
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                <div class="form-group form-input-nome my-4">
                  <label>Nome</label>
                  <input value="<%= contato.nome %>" type="text" class="form-control input-nome" name="nome">
                </div>
                <div class="form-group form-input-sobrenome my-4">
                    <label>Sobrenome</label>
                    <input value="<%= contato.sobrenome %>" type="text" class="form-control input-sobrenome" name="sobrenome">
                </div>
                <div class="form-group form-input-email my-4">
                    <label>Email</label>
                    <input value="<%= contato.email %>" type="email" class="form-control input-email" name="email">
                </div>
                <div class="form-group form-input-telefone my-4">
                    <label>Telefone</label>
                    <input value="<%= contato.telefone %>" type="tel" class="form-control input-telefone" name="telefone">
                </div>
              
                <% if(contato._id) { %> 
                <button type="submit" class="btn btn-primary">Editar</button>
                <% } else { %> 
                <button type="submit" class="btn btn-primary">Salvar</button>
                <% } %> 
            </form>

        </div>
        <div class="col-lg-2"></div>
    </div>

</div>

<%- include('includes/footer')%>    